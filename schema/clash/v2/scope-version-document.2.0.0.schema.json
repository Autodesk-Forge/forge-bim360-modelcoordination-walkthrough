{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://autodesk.com/scope-version-documents.2.0.0.json",
    "title": "Scope Version Objects",
    "description": "The documents associated with this scope version.",
    "type": "object",
    "properties": {
        "scope": {
            "type": "string"
        },
        "version": {
            "type": "integer"
        },
        "documents": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "The ID of this document in the scope version",
                        "type": "integer"
                    },
                    "urn": {
                        "description": "The URN of the document in the scope version",
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "urn"
                ]
            }
        }
    },
    "required": [
        "scope",
        "version",
        "documents"
    ]
}